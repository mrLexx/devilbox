# vim: set ft=yaml:
---
version: '2.3'

services:

  # -----------------------------------------------------------------------------------------------
  # Varnish
  # -----------------------------------------------------------------------------------------------
  sftp:
    image: atmoz/sftp
    hostname: sftp
    ports:
      - "${LOCAL_LISTEN_ADDR}${HOST_PORT_SFTP:-22}:22"
    networks:
      app_net:
        ipv4_address: 172.16.238.230
    depends_on:
      - bind
